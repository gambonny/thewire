{
  "name": "@thewire/web",
  "private": true,
  "version": "0.0.1",
  "type": "module",
  "scripts": {
    "dev": "wireit",
    "build": "wireit",
    "preview": "wireit",
    "test": "wireit",
    "lint": "wireit",
    "format": "wireit",
    "bundle:analyse": "wireit"
  },
  "dependencies": {
    "@thewire/ui": "workspace:*",
    "react": "catalog:",
    "react-dom": "catalog:"
  },
  "devDependencies": {
    "@pandacss/dev": "catalog:",
    "@size-limit/file": "^11.2.0",
    "@thewire/eslint-config": "workspace:*",
    "@thewire/preset": "workspace:*",
    "@thewire/styled": "workspace:*",
    "@types/react": "catalog:",
    "@types/react-dom": "catalog:",
    "@vitejs/plugin-react-swc": "catalog:",
    "eslint": "catalog:",
    "prettier": "catalog:",
    "rollup-plugin-visualizer": "^5.14.0",
    "size-limit": "^11.2.0",
    "typescript": "catalog:",
    "vite": "catalog:"
  },
  "wireit": {
    "dev": {
      "command": "vite dev",
      "service": true,
      "files": [
        "src/**/*.{ts,tsx}",
        "*config.*",
        "index.html"
      ]
    },
    "tsc": {
      "command": "tsc -b"
    },
    "compile": {
      "command": "vite build",
      "files": [
        "src/**/*.{ts,tsx}",
        "*config.*",
        "index.html"
      ],
      "output": [
        "dist/**"
      ]
    },
    "build": {
      "command": "size-limit",
      "dependencies": [
        "tsc",
        "compile"
      ]
    },
    "preview": {
      "command": "vite preview",
      "dependencies": [
        "build"
      ]
    },
    "test": {
      "command": "vitest run",
      "files": [
        "src/**/*.ts",
        "tests/**/*.ts",
        "tsconfig.json",
        "vitest.config.ts"
      ]
    },
    "lint": {
      "command": "eslint .",
      "files": [
        "src/**/*.{ts,tsx}",
        "tests/**/*.{ts,tsx}",
        "tsconfig.json",
        "*config.*",
        "index.html"
      ]
    },
    "format": {
      "command": "prettier --ignore-path ../../.prettierignore --write .",
      "files": [
        "src/**/*.{ts,tsx}",
        "tests/**/*.{ts,tsx}",
        "tsconfig.json",
        "*config.*",
        "index.html"
      ]
    },
    "bundle:analyse": {
      "command": "vite build",
      "env": {
        "ANALYSE_BUNDLE": "true"
      }
    }
  },
  "size-limit": [
    {
      "path": "dist/assets/*.js",
      "brotli": true,
      "limit": "100kB"
    }
  ],
  "engines": {
    "node": "22.12.0",
    "pnpm": "10.6.0"
  },
  "volta": {
    "extends": "../../package.json"
  }
}
