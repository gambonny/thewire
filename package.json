{
  "name": "@thewire",
  "version": "0.0.1",
  "description": "a monorepo setup",
  "scripts": {
    "clean": "find ./ -name node_modules -type d -exec rm -rf {} +",
    "build": "wireit",
    "test": "wireit",
    "format": "wireit",
    "lint": "wireit"
  },
  "author": "Jonny Gamba",
  "license": "ISC",
  "volta": {
    "node": "22.12.0",
    "pnpm": "10.6.0"
  },
  "engines": {
    "node": "22.12.0",
    "pnpm": "10.6.0"
  },
  "devDependencies": {
    "@total-typescript/ts-reset": "^0.6.1",
    "@types/react": "catalog:",
    "@types/react-dom": "catalog:",
    "type-fest": "^4.37.0",
    "typescript": "catalog:",
    "vite-tsconfig-paths": "^5.1.4",
    "vitest": "^3.0.8",
    "wireit": "^0.14.11"
  },
  "wireit": {
    "build": {
      "dependencies": [
        "./apps/web:build"
      ]
    },
    "test": {
      "command": "vitest --run"
    },
    "lint": {
      "dependencies": [
        "./apps/web:lint",
        "./packages/services:lint",
        "./design-system/preset:lint",
        "./design-system/styled:lint",
        "./design-system/ui/:lint"
      ]
    },
    "format": {
      "dependencies": [
        "./apps/web:format",
        "./packages/services:format",
        "./tooling/eslint-config:format",
        "./design-system/preset:format",
        "./design-system/styled:format",
        "./design-system/ui/:format"
      ]
    }
  }
}
