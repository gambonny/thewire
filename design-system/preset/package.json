{
  "name": "@thewire/preset",
  "type": "module",
  "version": "0.0.1",
  "main": "dist/index.cjs",
  "module": "dist/index.mjs",
  "types": "dist/index.d.ts",
  "exports": {
    "import": "./dist/index.mjs",
    "require": "./dist/index.cjs"
  },
  "scripts": {
    "bundle": "wireit",
    "build": "wireit",
    "test": "wireit",
    "lint": "wireit",
    "format": "wireit"
  },
  "volta": {
    "extends": "../../package.json"
  },
  "engines": {
    "node": "22.12.0",
    "pnpm": "10.6.0"
  },
  "devDependencies": {
    "@monorepo/eslint-config": "workspace:*",
    "@pandacss/dev": "catalog:",
    "eslint": "catalog:",
    "prettier": "catalog:",
    "tsup": "catalog:"
  },
  "wireit": {
    "bundle": {
      "command": "tsup --watch",
      "files": [
        "src/**/*.{ts,tsx}"
      ],
      "service": true
    },
    "build": {
      "command": "tsup",
      "files": [
        "src/**/*.{ts,tsx}",
        "tsconfig.json"
      ],
      "output": [
        "dist/**"
      ]
    },
    "test": {
      "command": "vitest run",
      "files": [
        "src/**/*.ts",
        "tests/**/*.ts",
        "vitest.config.ts"
      ]
    },
    "lint": {
      "command": "eslint .",
      "files": [
        "src/**/*.{ts,tsx}",
        "*config.*"
      ]
    },
    "format": {
      "command": "prettier --ignore-path ../../.prettierignore --write .",
      "files": [
        "src/**/*.{ts,tsx}",
        "*config.*"
      ]
    }
  }
}
